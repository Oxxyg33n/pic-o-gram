.posts-wrapper.row
	.post
		.post-head
			.name
				post.user.user_name
		.image.center-block
			=image_tag @post.image.url(:medium), class: 'img-responsive'
		%p.caption
			=@post.caption
		.text-center
			=link_to "Back |", posts_path |
			- if post.user.id == current_user.id
				=link_to "Edit post", edit_post_path(@post)
