.posts-wrapper.row
	.post
		.post-head
			.name
				.text-center
					Update your post	
		.image-center-block
			=image_tag @post.image.url(:medium), class: 'img-responsive'
		%p.caption
			=@post.caption

= render "form"

.text-center
	=link_to "Delete photo |", post_path(@post), method: :delete, data: { confirm: "Are you sure you want to delete this post?" } |
	=link_to "Cancel", posts_path
